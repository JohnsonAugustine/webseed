#!/usr/bin/env node
const app = require('../app');

const NODE_ENV = process.env.NODE_ENVIRONMENT
const PORT = process.env.PORT || 8002
const HOST = process.env.HOST || (NODE_ENV === 'production' ? require('address').ip() :  'localhost')

const server = app.listen(PORT, HOST, function() {
  const { address, port } = HOST === 'localhost' 
    ? { address: 'localhost', port: PORT } 
    : server.address()
	console.log('Seedess server listening at http://' + address + ':' + port);
	console.log('Cors enabled for *')
});
